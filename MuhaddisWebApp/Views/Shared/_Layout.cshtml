<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MuhaddisWebApp</title>
   @*  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

   <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.rtl.min.css" integrity="sha384-gXt9imSW0VcJVHezoNQsP+TNrjYXoGcrqBZJpry9zJt8PCQjobwmhMGaDHTASo9N" crossorigin="anonymous">
   
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MuhaddisWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header id="headerBanner" class="border-bottom border-success border-4">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom border-success border-4 box-shadow">
                <div class="container-fluid ">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">محدث</a> *@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav mx-auto ">
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Index">رابطہ کریں</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Index">تعاون</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Index">استعمال کرنے کا طریقہ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Index">کچھ ہمارے بارے میں</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Index">خصوصیات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light fw-bold fs-5" asp-area="" asp-controller="Home" asp-action="Privacy">صفحہ اول</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="position-relative">
                <img data-bs-toggle="modal" data-bs-target="#staticBackdrop" cursor: src="./image/settingimg.png" height="50px" width="50px" class="position-absolute top-0 start-0 ms-1" title="ڈیفالٹ سیٹنگ" style="margin-top:-25px; cursor:pointer;" />
            </div>
        </nav>
        <div class="text-center">
            <img class="img-fluid" src="./image/banner1.png"/>
        </div>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            &copy; 2024 - MuhaddisWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>




    <!-- Modal -->
    <div dir="rtl" class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">ڈیفالٹ سیٹنگ منتخب کریں</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
             <div class="col-3"></div>
                        <div class="col-3">التراقيم</div>
                    <div class="col-3">
                        التراجم
                    </div>
                    <div class="col-3">
                        
                            الحکم علی الحدیث
                    </div>
                    </div>
                </div>
                <div class="modal-footer">
                   
                    <button type="button" class="btn btn-success">ڈیفالٹ سیٹنگ محفوظ کریں</button>
                </div>
            </div>
        </div>
    </div>















    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
